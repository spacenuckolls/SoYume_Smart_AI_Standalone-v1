{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "outDir": "./dist/main",
    "rootDir": "./src",
    "types": ["node", "electron"]
  },
  "include": [
    "src/main/**/*",
    "src/shared/**/*"
  ],
  "exclude": [
    "src/renderer/**/*",
    "src/test/**/*",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}