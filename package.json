{
  "name": "soyume-ai-creative-assistant",
  "version": "0.1.0",
  "description": "AI-powered creative writing assistant with offline capabilities and universal accessibility",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "tsc -p tsconfig.main.json && electron dist/main/main.js",
    "dev:renderer": "webpack serve --config webpack.renderer.config.js",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "webpack --config webpack.renderer.config.js --mode production",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=src/.*\\.(test|spec)\\.(ts|tsx)$",
    "test:integration": "jest --testPathPattern=tests/integration/.*\\.(test|spec)\\.(ts|tsx)$",
    "test:e2e": "jest --testPathPattern=tests/e2e/.*\\.(test|spec)\\.(ts|tsx)$",
    "test:performance": "jest --testPathPattern=tests/performance/.*\\.(test|spec)\\.(ts|tsx)$",
    "test:accessibility": "jest --testPathPattern=tests/accessibility/.*\\.(test|spec)\\.(ts|tsx)$",
    "test:security": "jest --testPathPattern=tests/security/.*\\.(test|spec)\\.(ts|tsx)$",
    "test:all": "jest --coverage --testPathPattern=\"(src|tests)/.*\\.(test|spec)\\.(ts|tsx)$\"",
    "test:ci": "jest --coverage --ci --watchAll=false --testPathPattern=\"(src|tests)/.*\\.(test|spec)\\.(ts|tsx)$\"",
    "quality:dashboard": "node scripts/quality-dashboard.js",
    "quality:dashboard:open": "node scripts/quality-dashboard.js --open",
    "package": "electron-builder",
    "package:linux": "electron-builder --linux",
    "package:windows": "electron-builder --win",
    "package:mac": "electron-builder --mac",
    "db:migrate:test": "echo 'Running test database migrations...'",
    "db:seed:test": "echo 'Seeding test database...'"
  },
  "keywords": [
    "creative-writing",
    "ai-assistant",
    "accessibility",
    "offline",
    "story-development"
  ],
  "author": "SoYume",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "^20.6.0",
    "@types/sqlite3": "^3.1.8",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.5.1",
    "babel-jest": "^29.7.0",
    "concurrently": "^8.2.1",
    "electron": "^26.2.1",
    "electron-builder": "^24.6.4",
    "eslint": "^8.49.0",
    "html-webpack-plugin": "^5.5.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-extended": "^4.0.2",
    "jest-html-reporters": "^3.1.5",
    "jest-junit": "^16.0.0",
    "jest-transform-stub": "^2.0.0",
    "jest-watch-typeahead": "^2.2.2",
    "playwright": "^1.39.0",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.4",
    "typescript": "^5.2.2",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "dependencies": {
    "crypto-js": "^4.1.1",
    "electron-store": "^8.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "@types/react": "^18.2.22",
    "@types/react-dom": "^18.2.7"
  },
  "build": {
    "appId": "com.soyume.ai-creative-assistant",
    "productName": "SoYume AI Creative Assistant",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}